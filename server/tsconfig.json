{
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist",
        "target": "es6",
        "declaration": true,
        "strict": true,
        "rootDir": "src",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    }
}